generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Order {
  id                 String      @id @default(uuid())
  amount             String
  price              String
  side               OrderSide
  shieldAddress      String
  status             OrderStatus
  createdAt          DateTime    @default(now())
  userAddress        String?
  pairId             String
  filledAmount       String      @default("0")
  baseChainSelector  String      // chain where the RWA token lives
  quoteChainSelector String      // chain where USDC is (buyer chooses)
  bridgeTxHash       String?     // Cross-chain: CCIP bridge tx hash on source chain
  encryptedPayload   String?     // ECIES-encrypted order payload for CRE TEE
  pair               Pair        @relation(fields: [pairId], references: [id])
  user               User?       @relation(fields: [userAddress], references: [address])
}

model User {
  address      String         @id
  name         String
  nonce        String?
  isVerified   Boolean        @default(false)
  orders       Order[]
  sessions     Session[]
  balances     TokenBalance[]
  transactions Transaction[]
  withdrawals  Withdrawal[]
}

model TokenBalance {
  id            String   @id @default(uuid())
  token         String
  balance       String
  updatedAt     DateTime @updatedAt
  userAddress   String
  chainSelector String   @default("ethereum-testnet-sepolia-base-1")
  user          User     @relation(fields: [userAddress], references: [address])

  @@unique([userAddress, token, chainSelector])
}

model Session {
  id          String   @id @default(uuid())
  userAddress String
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userAddress], references: [address])
}

model Withdrawal {
  id           String           @id @default(uuid())
  withdrawalId String           @unique
  userAddress  String
  token        String
  amount       String
  status       WithdrawalStatus @default(PENDING)
  txHash       String?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  user         User             @relation(fields: [userAddress], references: [address])
}

model Token {
  address       String @id
  name          String
  symbol        String
  decimals      Int    @default(18)
  chainSelector String @default("ethereum-testnet-sepolia-base-1")
}

model Pair {
  id         String  @id @default(uuid())
  baseSymbol String  @unique  // e.g., "tMETA" â€” one pair per RWA symbol across all chains
  orders     Order[]
}

model Transaction {
  id            String   @id @default(uuid())
  type          String
  token         String
  amount        String
  chainSelector String   @default("ethereum-testnet-sepolia-base-1")
  txHash        String?
  createdAt     DateTime @default(now())
  userAddress   String
  user          User     @relation(fields: [userAddress], references: [address])
}

model Settlement {
  id                String           @id @default(uuid())
  orderId           String           @unique
  type              String
  status            SettlementStatus @default(PENDING)
  sourceChain       String?
  destChain         String?
  shieldBuyer       String?
  shieldSeller      String?
  ccipMessageId     String?
  destChainSelector String?
  token             String?
  amount            String?
  settleTxHash      String?
  bridgeTxHash      String?
  releaseTxHash     String?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
}

enum OrderStatus {
  PENDING
  OPEN
  MATCHED
  SETTLED
  CANCELLED
}

enum OrderSide {
  BUY
  SELL
}

enum WithdrawalStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum SettlementStatus {
  PENDING
  SETTLED
  BRIDGING
  COMPLETED
  FAILED
}
