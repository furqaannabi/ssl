generator client {
    output   = "../generated/prisma"
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

enum OrderStatus {
    PENDING
    OPEN
    MATCHED
    SETTLED
    CANCELLED
}

enum OrderSide {
    BUY
    SELL
}

model Order {
    id               String      @id @default(uuid())
    asset            String
    quoteToken       String
    amount           String
    price            String
    side             OrderSide
    stealthPublicKey String
    status           OrderStatus
    createdAt        DateTime    @default(now())
    userAddress      String?
    user             User?       @relation(fields: [userAddress], references: [address])
}

model User {
    address  String         @id
    name     String
    orders   Order[]
    balances TokenBalance[]
    sessions Session[]
    nonce    String?
}

model TokenBalance {
    id          String   @id @default(uuid())
    token       String
    balance     String
    updatedAt   DateTime @updatedAt
    userAddress String
    user        User     @relation(fields: [userAddress], references: [address])

    @@unique([userAddress, token])
}

model Session {
    id          String   @id @default(uuid())
    userAddress String
    user        User     @relation(fields: [userAddress], references: [address])
    expiresAt   DateTime
    createdAt   DateTime @default(now())
}
